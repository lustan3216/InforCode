<div class="row" id="app">
  <div class="col-xs-12">
    <div class="portlet light bordered">
      <div class="portlet-body">
        <div class="table-container">
          <div class="dataTables_wrapper dataTables_extended_wrapper">
            <div class="row">
              <div class="col-sm-8">
                <div class="table-group-actions">
                  <a class="btn btn-sm btn-default table-group-action-submit" href="<%= self.send("new_#{ request.params['controller'].gsub('/','_').singularize }_path") %>">
                    <i class="fa fa-check"></i> Create
                  </a>
                  <%= yield %>
                </div>
              </div>

              <div class="col-sm-4" v-if="search_placeholder.length > 0">
                <input type="text" class="form-control form-filter input-sm" v-model="find_text" :placeholder="search_placeholder.join(' ')">
              </div>
            </div>

            <table-vue :columns="columns"
                       :source_name="source_name"
                       :sources="sources"
                       :action_list="action_list"
                       :sorting_list="sorting_list"
                       :filter_list="filter_list">
            </table-vue>

            <div class="row">
              <div class="col-xs-12 text-center">
                <pagination-vue v-bind:pagination="pagination"></pagination-vue>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>