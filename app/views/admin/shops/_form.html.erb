<div class="row">
  <div class="col-xs-12">
    <div class="portlet light bordered">
      <%= render 'admin/shared/form_title' %>
      <div class="portlet-body form">

        <%= form_for [:admin, @shop] do |f| %>
            <div class="form-body">
              <div class="form-group form-md-line-input">
                <%= f.collection_select :client_id, Client.all.order('id asc'), :id , :title, {}, class: 'form-control' %>
                <%= f.label :client_id %>
              </div>

              <div class="form-group form-md-line-input shop_title">
                <%= f.text_field :title, class: 'form-control' %>
                <%= f.label :title, 'Title (If change then ã€ŒDaily Shop Reports  will separate to a new report.)' %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :description, class: 'form-control' %>
                <%= f.label :description %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :country, class: 'form-control' %>
                <%= f.label :country %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.number_field :zipcode, class: 'form-control' %>
                <%= f.label :zipcode %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :city, class: 'form-control' %>
                <%= f.label :city %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :district, class: 'form-control' %>
                <%= f.label :district %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :address1, class: 'form-control' %>
                <%= f.label :address1, 'Address' %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.telephone_field :telephone, class: 'form-control' %>
                <%= f.label :telephone %>
              </div>

              <div class="form-group">
                <%= f.submit 'Submit', class: 'btn btn-default btn-block' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



