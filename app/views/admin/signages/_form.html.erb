<div class="row">
  <div class="col-xs-12">
    <div class="portlet light bordered">
      <%= render 'admin/shared/form_title' %>
      <div class="portlet-body form">

        <%= form_for [:admin, @signage] do |f| %>
            <div class="form-body">
              <div class="form-group form-md-line-input">
                <%= f.collection_select :client_id, Client.all.order('id asc'), :id , :title, {}, class: 'form-control' %>
                <%= f.label :client_id %>
              </div>

              <div class="form-group form-md-line-input signage_title">
                <%= f.text_field :title, class: 'form-control' %>
                <%= f.label :title, 'Title (If change then ã€ŒDaily Signage Reports  will separate to a new report.)' %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :sn, class: 'form-control' %>
                <%= f.label :sn %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.collection_select :shop_id, Shop.all, :id, :id_with_title, {include_blank: 'Select a option'}, class: 'form-control' %>
                <%= f.label :shop_id, 'Shop' %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.collection_select :container_id, Container.all, :id, :id_with_title, {include_blank: 'Select a option'}, class: 'form-control' %>
                <%= f.label :container_id, 'Container' %>
              </div>

              <div class="form-group">
                <%= f.submit 'Submit', class: 'btn btn-default btn-block' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>