<div class="row">
  <div class="col-xs-12">
    <div class="portlet light bordered">
      <%= render 'admin/shared/form_title' %>
      <div class="portlet-body form">

        <%= form_for [:admin, @template] do |f| %>
            <div class="form-body">
              <div class="form-group form-md-line-input">
                <%= f.collection_select :client_id, Client.all.order('id asc'), :id , :title, {}, class: 'form-control' %>
                <%= f.label :client_id %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :title, class: 'form-control' %>
                <%= f.label :title %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :description, class: 'form-control' %>
                <%= f.label :description %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :content, class: 'form-control' %>
                <%= f.label :content %>
              </div>

              <div class="form-group file_upload">
                <%= f.file_field :photo, class: 'form-control hidden' %>
                <%= f.label :photo do %>
                    <p>Logo</p>
                    <p class="btn btn-default" style="margin-right: 10px;">Click to upload</p>
                    <span name="name"></span>
                <% end %>
                <img src="" id="image_file" style="height: 300px; display: none;">
              </div>

              <div class="form-group">
                <%= f.submit 'Submit', class: 'btn btn-default btn-block' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>