<div class="row">
  <div class="col-xs-12">
    <div class="portlet light bordered">
      <%= render 'client/shared/form_title' %>
      <div class="portlet-body form">

        <%= form_for [:client , @manager] do |f| %>
            <div class="form-body">
              <div class="form-group form-md-line-input">
                <%= f.email_field :email, class: 'form-control' %>
                <%= f.label :email %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :name, class: 'form-control' %>
                <%= f.label :name %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.password_field :password, class: 'form-control' %>
                <%= f.label :password, 'Password (Keep blank if dont want to change)' %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
                <%= f.label :password_confirmation %>
              </div>

              <div class="form-group form-md-line-input">
                <%= f.text_field :daily_budget, class: 'form-control' %>
                <%= f.label :daily_budget, 'Daily Budget (Default is zero, and it meanings no budget limit)' %>
              </div>

              <!--<div class="form-group form-md-line-input">-->
                <%#= number_field_tag :add_money, 0, class: 'form-control', min: 0 %>
                <%#= label_tag :add_money, "Add Money (Remaining Sum: #{@manager.remaining_sum})" %>
              <!--</div>-->

              <div class="form-group">
                <%= f.submit 'Submit', class: 'btn btn-default btn-block' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



